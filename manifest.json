{
  "manifest_version": 2,

  "name": "Tablr",
  "description": "A powerful tab manager at your fingertips!",
  "version": "0.5",

  "browser_action": {
    "default_icon": "img/defaultIcon.png",
    "default_popup": "popup.html"
  },

  "icons": {
     "128": "img/hot.png",
     "48": "img/hot.png"
  },

  "permissions": [
    "webNavigation",
    "webRequest",
    "tabs",
    "http://*/*", "https://*/*"
  ]
}
